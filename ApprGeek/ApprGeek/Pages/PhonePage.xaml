<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApprGeek.Pages.PhonePage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="What's your phone number?" Padding="30" TextColor="Black" HorizontalTextAlignment="Start" FontSize="24" FontAttributes="Bold"/>


            <Frame BorderColor="Gray" Grid.Column="0">
                <Entry x:Name="Pnum" Placeholder="Your phone number" PlaceholderColor="gray" FontSize="12"/>
            </Frame>


            <Button x:Name="pupdate" Text="Update" Clicked="UpdatePhoneClicked" BackgroundColor="black" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>