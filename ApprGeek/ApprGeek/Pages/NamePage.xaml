<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApprGeek.Pages.NamePage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="What's your name?" Padding="30" TextColor="Black" HorizontalTextAlignment="Start" FontSize="24" FontAttributes="Bold"/>

            <Frame BorderColor="Gray" Grid.Column="0">
                <Entry x:Name="Fname" Placeholder="First name" PlaceholderColor="gray" FontSize="12"/>
            </Frame>

            <Frame BorderColor="Gray" Grid.Column="1">
                <Entry x:Name="Lname" Placeholder="Last name" PlaceholderColor="gray" FontSize="12"/>
            </Frame>


            <Button x:Name="nupdate" Text="Update" Clicked="OnUpdateClicked" BackgroundColor="black" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>