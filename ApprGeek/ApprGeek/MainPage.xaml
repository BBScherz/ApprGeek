<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApprGeek.MainPage">

    <StackLayout>

        <!--Title and profile image-->
        <StackLayout>
            
            <Frame Padding="30" BorderColor="Transparent" BackgroundColor="Transparent">
                <Label Text="Edit Profile" HorizontalTextAlignment="Center" TextColor="CornflowerBlue" FontSize="24" FontAttributes="Bold"/>
            </Frame>

            <Frame CornerRadius="100" BorderColor="CornflowerBlue" HeightRequest="175" WidthRequest="175" Padding="0" IsClippedToBounds="True" HorizontalOptions="Center">
                <Frame CornerRadius="100" BorderColor="CornflowerBlue" HeightRequest="175" WidthRequest="175" Padding="0" IsClippedToBounds="True" HorizontalOptions="Center">
                    <ImageButton x:Name="Pfp" Source="sample.jpg" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Frame>
            </Frame>

        </StackLayout>

        <!--Name-->
        <StackLayout BackgroundColor="Transparent">
            
            <Button x:Name="name" Text="Name" HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="Gray"/>
            <Label x:Name="namelabel" HorizontalTextAlignment="Start" TextColor="Black" FontAttributes="Bold" Margin="26, -10, 20, 8"/>
            <BoxView HeightRequest="1" Color="LightGray" Margin ="20, 0, 20, 0"/>
        </StackLayout>

        <!--Phone number-->
        <StackLayout  BackgroundColor="Transparent">
       
            <Button x:Name="phone" Text="Phone" HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="Gray"/>
            <Label x:Name="phonelabel" HorizontalTextAlignment="Start" TextColor="Black" FontAttributes="Bold" Margin="26, -10, 20, 8"/>
            <BoxView HeightRequest="1" Color="LightGray" Margin ="20, 0, 20, 0"/>
        </StackLayout>

        <!--Email-->
        <StackLayout BackgroundColor="Transparent">
            
            <Button x:Name="email" Text="Email" HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="Gray"/>
            <Label x:Name="emaillabel" HorizontalTextAlignment="Start" TextColor="Black" FontAttributes="Bold" Margin="26, -10, 20, 8"/>
            <BoxView HeightRequest="1" Color="LightGray" Margin ="20, 0, 20, 0"/>
        </StackLayout>

        <!--Bio-->
        <StackLayout  BackgroundColor="Transparent">
            
            <Button x:Name="about" Text="Tell us about yourself" HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="Gray"/>
            <Label x:Name="aboutlabel" HorizontalTextAlignment="Start" TextColor="Black" FontAttributes="Bold" Margin="26, -10, 20, 8"/>
            <BoxView HeightRequest="1" Color="LightGray" Margin ="20, 0, 20, 0"/>
        </StackLayout>




    </StackLayout>

</ContentPage>
