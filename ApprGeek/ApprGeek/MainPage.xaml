<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApprGeek.MainPage">

    <StackLayout>

        <Frame Padding="30" BorderColor="Transparent">
            <Label Text="Edit Profile" HorizontalTextAlignment="Center" TextColor="CornflowerBlue" FontSize="24" FontAttributes="Bold"/>
        </Frame>

        <Frame BorderColor="Transparent">
            <Label Text="Name" HorizontalTextAlignment="Start" TextColor="Gray"/>
        </Frame>

        <Frame BorderColor="Transparent">
            <Label Text="Phone" HorizontalTextAlignment="Start" TextColor="Gray"/>
        </Frame>

        <Frame BorderColor="Transparent">
            <Label Text="Email" HorizontalTextAlignment="Start" TextColor="Gray"/>
        </Frame>

        <Frame BorderColor="Transparent">
            <Label Text="Tell us about yourself" HorizontalTextAlignment="Start" TextColor="Gray"/>
        </Frame>




    </StackLayout>

</ContentPage>
